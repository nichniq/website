<style>
  .grid { display: grid }
  .grid.periods {
    grid-template-columns: min-content 1fr min-content min-content;
    gap: 1rem;
    justify-content: center;
    font-size: 0.6rem;
  }
  .grid.past {
    grid-template-columns: repeat(3, min-content);
    gap: 1rem;
    grid-column: 3;
  }

  .highlight2 {
    align-self: end;
    grid-column: 4;
  }

  .highlight img { width: calc(150px * 2.3) }
  .past img { width: 150px }
  .highlight2 img {
    width: 150px;
    height: 150px;
    object-fit: cover;
  }

  .grid.column { grid-auto-flow: row }
  .grid.column.gap_05rem { row-gap: 0.5rem }
  .grid.column.center { justify-items: center }
  .grid.column.top { align-content: start; }
  .center { text-align: center; }

  .wide { display: none }

  @media (max-width: 1100px) {
    .grid.periods {
      grid-auto-flow: row;
      grid-template-columns: 1fr;
      justify-content: center;
      justify-items: center;
    }

    .grid.past,
    .grid.highlight2 {
      grid-column: unset;
    }

    .grid.past {
      grid-template-columns: repeat(3, minmax(100px, 1fr));
      grid-row: 2;
    }
    .grid.highlight2 {
      grid-row: 3;
    }

    /*.long { display: none }
    .wide { display: block }*/

    .highlight img { width: calc(150px * 3.2); max-width: 100% }
    .past img { max-width: 100% } /* get width from .grid.past */
    /*.highlight2 img { width: calc(150px * 3.2); max-width: 100% }*/
  }
</style>

<main id="periods" class="grid periods">
  {{# highlight }}
  <a class="grid column gap_05rem top center highlight" href="{{{ link }}}">
    <img src="{{{ image }}}" alt="" />
    <h2>{{ title }}</h2>
  </a>
  {{/ highlight }}

  <div class="grid past">
    {{# periods }}
    <a class="grid column gap_05rem top center" href="{{{ link }}}">
      <img src="{{{ image }}}" alt="" />
      <h2>{{ title }}</h2>
    </a>
    {{/ periods }}
  </div>

  {{# second_highlight }}
  <a class="grid column gap_05rem top center highlight2" href="{{{ link }}}">
    <img class="long" src="{{{ long }}}" alt="" />
    <img class="wide" src="{{{ wide }}}" alt="" />
    <h2>{{ title }}</h2>
  </a>
  {{/ second_highlight }}
</main>
