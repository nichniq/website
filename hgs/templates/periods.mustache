<style>
  .grid { display: grid }
  .grid.periods {
    grid-template-areas:
      "recent recent past past past sited"
      "recent recent past past past sited"
      ".      .      past past past .    ";
    gap: 1rem;
    font-size: 0.6rem;
  }

  .grid.periods > *:first-child { grid-area: recent }
  .grid.periods > *:first-child { grid-template-rows: 1fr min-content }
  .grid.periods > *:last-child { grid-area: sited }
  .grid.periods > *:last-child { grid-template-rows: 1fr min-content }

  img {
    aspect-ratio: 1;
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  .grid.column { grid-auto-flow: row }
  .grid.column.gap_05rem { row-gap: 0.5rem }
  .grid.column.center { justify-items: center }
  .grid.column.top { align-content: start; }
  .center { text-align: center; }
</style>

<main id="periods" class="grid periods">
  {{# highlight }}
  <a class="grid column gap_05rem top center" href="{{{ link }}}">
    <img src="{{{ image }}}" alt="" />
    <h2>{{ title }}</h2>
  </a>
  {{/ highlight }}

  {{# periods }}
  <a class="grid column gap_05rem top center" href="{{{ link }}}">
    <img src="{{{ image }}}" alt="" />
    <h2>{{ title }}</h2>
  </a>
  {{/ periods }}

  {{# second_highlight }}
  <a class="grid column gap_05rem top center" href="{{{ link }}}">
    <img src="{{{ image }}}" alt="" />
    <h2>{{ title }}</h2>
  </a>
  {{/ second_highlight }}
</main>
