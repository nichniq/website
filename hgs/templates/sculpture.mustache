<style>
  .period-back {
    transform: translateX(-2rem);
  }
</style>

<main id="sculpture">
  <header>
    <p class="titular period-back">
      <a href="{{{ period_url }}}">{{ period }}</a>
    </p>
    <h2>{{ title }}</h2>
    <section class="info">
      {{# info }}
      <p>{{ . }}</p>
      {{/ info}}
    </section>
    {{# captioning }}
    <p>{{ . }}</p>
    {{/ captioning }}
  </header>

  <nav>
    <ul class="thumbnails undecorated">
      {{# videos }}
      <li>
        <img src="{{{ thumbnail }}}" alt="" />
      </li>
      {{/ videos }}
      {{# images }}
      <li>
        <img src="{{{ source }}}" alt="" />
      </li>
      {{/ images }}
    </ul>
  </nav>

  <section class="full-images">
    {{# videos }}
    <video src="{{{ source }}}" controls muted loop></video>
    {{/ videos }}
    {{# images }}
    <img src="{{{ source }}}" alt="" />
    {{/ images }}
  </section>
</main>
