{

  "manifest_version": 2,
  "name": "Pinterest Scraper",
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "54.0a1"
    }
  },

  "content_scripts": [
    {
      "matches": [ "https://www.pinterest.com/*" ],
      "js": [ "content.js" ]
    }
  ],

  "page_action": {
    "show_matches": [ "https://www.pinterest.com/*" ],
    "browser_style": true,
    "default_popup": "popup.html",
    "default_icon": "pinterest-logo.svg"
  },

  "browser_action": {
    "browser_style": true,
    "default_popup": "popup.html",
    "default_icon": "pinterest-logo.svg"
  },

  "sidebar_action": {
    "default_icon": "pinterest-logo.svg",
    "default_title": "Pinterest Scraper",
    "default_panel": "sidebar.html",
    "open_at_install": false
  },

  "background": {
    "page": "bg.html"
  },

  "permissions": [ "tabs", "activeTab" ]
}
