<!doctype html>

<title>Visual inspiration</title>

<meta charset="utf-8" />

<style>
  .canvas { position: relative }
  .canvas > .image { position: absolute }
</style>

<div class="canvas">{{# images }}
  <img
    async
    class="image"
    src="/images/thumbnails/{{{ path }}}"
    style="
      z-index: {{ zIndex }};
      left: {{ x }}px;
      top: {{ y }}px;
    "
  />{{/ images }}
</div>

<script type="module">
  fetch("/", {
    method: "POST",
    body: JSON.stringify([ "TEST", {
      path: "path/to/file",
      x: 0,
      y: 0,
    }])
  });
</script>
